<div class="sidebar">
  <h3>Search movie</h3>
  <form method="post" action="#" id="search_form">
    <p>
      <input
        class="search"
        type="text"
        name="search_field"
        placeholder="Enter keywords....."
      />
    </p>
  </form>
  <h3>Genres</h3>

  <ul>
    <% genres.forEach((genre) => { %>
    <li>
      <a href="/genre/<%=genre.slug%>"><%= genre.name %></a> ( <%= genre.count
      %> )
    </li>
    <% }) %>
  </ul>

  <h3>Top Directors</h3>

  <ul>
    <% directors.forEach((director) => { %>
    <li>
      <a href="/director/<%=director.id%>"><%= director.name %></a> ( <%=
      director.count %> )
    </li>
    <% }) %>
  </ul>

  <h4>New Website Launched</h4>
  <h5>January 1st, 2024</h5>
  <p>
    2024 sees the redesign of our website. Take a look around and let us know
    what you think.<br /><a href="#">Read more</a>
  </p>
  <p></p>
  <h4>New Spielberg movie</h4>
  <h5>December 1st, 2023</h5>
  <p>
    Coming this holiday! A new movie by director Steven Spielberg.<br /><a
      href="#"
      >Read more</a
    >
  </p>
</div>
